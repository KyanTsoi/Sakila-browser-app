extends layout

block content
  h1.mb-4= title

  // --- PAGINERING BOVENAAN ---
  include partials/_pagination

  // --- FILMLIJST ---
  if movies && movies.length > 0
    .row.row-cols-1.row-cols-sm-2.row-cols-md-4.row-cols-lg-5.g-5
      each movie in movies
        .col
          .card.h-100
            img.card-img-top(src="https://placehold.co/200x300/212529/ffffff?text=Film", alt="Filmposter")
            .card-body
              h5.card-title= movie.title
  else
    .alert.alert-info Geen films gevonden.
    
  // --- PAGINERING ONDERAAN ---
  include partials/_pagination
//- Dit is een herbruikbaar component voor de paginering.
if pagination && pagination.totalPages > 1
  nav.my-4(aria-label="Film paginering")
    ul.pagination.justify-content-center
      // Vorige knop
      li.page-item(class=(pagination.currentPage === 1 ? 'disabled' : ''))
        a.page-link(href=`${baseUrl}?page=${pagination.currentPage - 1}`) Vorige

      // Paginanummers
      - let startPage = Math.max(1, pagination.currentPage - 2)
      - let endPage = Math.min(pagination.totalPages, pagination.currentPage + 2)
      
      if startPage > 1
        li.page-item.disabled: a.page-link ...

      - for (let i = startPage; i <= endPage; i++)
        li.page-item(class=(i === pagination.currentPage ? 'active' : ''))
          a.page-link(href=`${baseUrl}?page=${i}`)= i
          
      if endPage < pagination.totalPages
        li.page-item.disabled: a.page-link ...

      // Volgende knop
      li.page-item(class=(pagination.currentPage === pagination.totalPages ? 'disabled' : ''))
        a.page-link(href=`${baseUrl}?page=${pagination.currentPage + 1}`) Volgende